<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base background color -->
    <item>
        <color android:color="#E8F5E9" />
    </item>

    <!-- Bubble 1 -->
    <item>
        <shape android:shape="oval">
            <size android:width="200dp" android:height="200dp" />
            <solid android:color="#FFCDD2" />
        </shape>
        <gravity android:gravity="top|start" />
        <translate android:fromXDelta="10%" android:fromYDelta="10%" />
    </item>

    <!-- Bubble 2 -->
    <item>
        <shape android:shape="oval">
            <size android:width="150dp" android:height="150dp" />
            <solid android:color="#BBDEFB" />
        </shape>
        <gravity android:gravity="top|end" />
        <translate android:fromXDelta="-20%" android:fromYDelta="15%" />
    </item>

    <!-- Bubble 3 -->
