        <shape android:shape="oval">
            <size android:width="100dp" android:height="100dp" />
            <solid android:color="#C8E6C9" />
        </shape>
        <gravity android:gravity="bottom|start" />
        <translate android:fromXDelta="5%" android:fromYDelta="-10%" />
    </item>

    <!-- Bubble 4 -->
